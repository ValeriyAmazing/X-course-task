extends ../../layouts/layout
block scripts 
    script(src="main.js")
block content
    section.book
        .container
            .book__content
                .book__img(style="background-image:url(../../img/cover.webp)")
                .book__detail
                    .detail
                        p.detail__name Book Loooooong Loooooong Name
                        p.detail__author John Dou 
                        p.detail__level Beginner 
                        .detail__tags 
                            a(href="#") #book-tag
                            a(href="#") #book-tag
                            a(href="#") #book-tag
                        .detail_rating
                            fieldset.rating 
                                input(type="radio", name="rating" value="5" id="stars5")
                                label(for="stars5") 
                                input(type="radio", name="rating" value="4" id="stars4")
                                label(for="stars4") 
                                input(type="radio", name="rating" value="3" id="stars3")
                                label(for="stars3") 
                                input(type="radio", name="rating" value="2" id="stars2")
                                label(for="stars2") 
                                input(type="radio", name="rating" value="1" id="stars1")
                                label(for="stars1") 
                .book__order
                    .order#order
                        .order__wrapper 
                            p.order__text Price, $
                            p.order__value#price 17
                        .order__wrapper 
                            p.order__text Count
                            .order__btn-wrapper 
                                button#dencrease -
                                input.form__input(type="number", name="count" id="count" value="1")
                                button#increase +
                        .order__wrapper
                            p.order__text Total price:
                            p.order__value#total-price 51
                        button.order__btn(type="submit") Add to cart 
