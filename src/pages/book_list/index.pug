extends ../../layouts/layout
block content
    section.books-list
        .book-list__container.container
            .search
                form.form(action="/") 
                    .form__search-wrapper 
                        input(type="text", name="search" id="search")
                    .form__option-wrapper 
                        select(name="category")
                            option(value="price") Price
                            option(value="author") Author 
                            option(value="year") Year
            .cards 
                ul.cards__list
                    for book in [{name:'bookname', author:'authorBook',img:'../../img/cover2.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover2.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover1.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover1.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover.webp', price:'100'},{name:'bookname', author:'authorBook',img:'../../img/cover.webp', price:'100'}]
                        li.item
                            .item__img-wrapper
                                img.item__img(src=book.img, alt="")
                            p.item__name= book.name
                            p.item__author= book.author 
                            .item__bottom-wrapper
                                span.item__price= book.price 
                                button.item__btn Viev
